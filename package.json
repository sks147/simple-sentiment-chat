    "express": "^4.17.1",
    "mongoose": "^5.5.13",
    "prettier": "^1.18.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "husky": "^2.4.0",
    "lint-staged": "^8.2.0",
    "nodemon": "^1.19.1"
  }
}
